extends layout

block content

    div.w3-container.w3-centered(style="width: 33%; margin: auto")
        div.w3-card-4
            div.w3-container.w3-blue-grey.w3-text-black
                h3 Přihlášení
            form.w3-container(action="/login" method="POST" style="padding-bottom: 16px")
                p
                    label Jméno
                    input.w3-input.w3-border.w3-round-medium(name="username")
                p
                    label Heslo
                    input.w3-input.w3-border.w3-round-medium(type="password" name="password")
                p
                    input.w3-btn.w3-round-medium.w3-blue-grey.w3-text-black.w3-border.w3-border-grey.w3-padding-small(type="submit" value="Login")
                p
                    label.w3-text-red= message

