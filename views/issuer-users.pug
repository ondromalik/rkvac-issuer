extends layout

block content
    div.w3-top
        div.w3-bar.w3-dark-gray
            a(href="/" class="w3-bar-item w3-button")
                i(class="fas fa-home fa-lg")
            //div.w3-dropdown-hover
                //button.w3-button Vydavatel
                //div(class="w3-dropdown-content w3-bar-block w3-border")
            a(href="/users" class="w3-bar-item w3-button") Uživatelé
            a(href="/attributes" class="w3-bar-item w3-button") Atributy
            a(href="/RA" class="w3-bar-item w3-button") Revokační autorita
            a(href="/logout" class="w3-bar-item w3-button w3-right")
                i(class="fas fa-sign-out-alt fa-lg")
            a(href="/login" class="w3-bar-item w3-button w3-right")
                i(class="fas fa-user fa-lg")

    br

    div.w3-cell-row
        div.w3-cell.w3-padding-16
            div.w3-container.w3-gray
                h2 Uživatelé
            div.w3-container
                div.w3-cell-row
                    div.w3-cell
                        h4 Seznam uživatelů
                        //h4= title
                    div.w3-cell.w3-right-align
                        a.w3-button.w3-circle.w3-hover-white(id="btnRefreshUsers")
                            i(class="fas fa-sync-alt")

                div(class="userTable" data-url="/refreshUsers")

        div.w3-container.w3-cell.w3-padding-16(style="width:33%")
            div.w3-card-4
                div.w3-container.w3-blue-grey.w3-text-black
                    h3 Nový uživatel
                div.w3-container(style="padding-bottom: 16px")
                    p
                        label Jméno
                        input.w3-input.w3-border.w3-round-medium(name="firstName" type="text" id="firstName")
                    p
                        label Příjmení
                        input.w3-input.w3-border.w3-round-medium(name="lastName" type="text" id="lastName")
                    button.w3-btn.w3-round-medium.w3-blue-grey.w3-text-black.w3-border.w3-border-grey.w3-padding-small(id="btnNewUser") Registrovat
                    p
                        label(hidden=true id="message")

    script(src='users-client.js')